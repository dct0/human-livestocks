{
  "name": "human-livestocks",
  "main": "src/index.ts",
  "scripts": {
    "dev": "run-p watch start",
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "xo"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "n/file-extension-in-import": "off",
      "n/prefer-global/process": "off",
      "unicorn/no-process-exit": "off",
      "import/no-unassigned-import": "off",
      "import/extensions": "off",
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "groups": [
            "index",
            "sibling",
            "parent",
            "internal",
            "external",
            "builtin",
            "object",
            "type"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@sapphire/discord.js-utilities": "^7.0.2",
    "@sapphire/framework": "^4.6.0",
    "@sapphire/plugin-api": "^5.1.1",
    "@sapphire/plugin-hmr": "^2.0.2",
    "@sapphire/plugin-logger": "^3.0.6",
    "discord-api-types": "0.37.x",
    "discord.js": "~14.13.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/node": "^20.6.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "xo": "^0.56.0"
  }
}
